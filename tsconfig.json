{
  "compilerOptions" : {
    "module" : "commonjs",
    "target" : "es6",
    "stripInternal": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap" : true,
    "watch": false,
    "alwaysStrict": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
      "node_modules"
  ]
}
